{
  "manifest_version": 2,

  "name": "Focus",
  "description": "Lightweight site blocking extension",
  "version": "1.0",
  "homepage_url": "https://github.com/dheerajpille/Focus",
  "author": "Dheeraj Pille",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}