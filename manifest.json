{
  "manifest_version": 2,

  "name": "Focus",
  "description": "Lightweight site blocking extension",
  "version": "1.0",
  "homepage_url": "https://github.com/dheerajpille/Focus",
  "author": "Dheeraj Pille",

  "content_scripts": [
    {
      "js": ["js/libs/jquery-3.2.1.min.js", "js/block.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}